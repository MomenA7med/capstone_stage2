<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.momen.capstone_stage2.ui.QuestionActivity">

    <TextView
        android:id="@+id/quesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:padding="10dp"
        android:textSize="20sp"
        tools:text="Momen"
        android:textStyle="bold"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/answer1"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="70dp"
        android:textColor="@color/colorAccent"
        android:onClick="checkTrue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quesion"
        android:layout_marginLeft="50dp" />

    <Button
        android:id="@+id/answer2"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_marginEnd="50dp"
        android:onClick="checkTrue"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/answer1"
        android:layout_marginRight="50dp" />

    <Button
        android:id="@+id/answer3"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:onClick="checkTrue"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="@+id/answer1"
        app:layout_constraintTop_toBottomOf="@+id/answer1" />

    <Button
        android:id="@+id/answer4"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:onClick="checkTrue"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="@+id/answer2"
        app:layout_constraintTop_toTopOf="@+id/answer3" />

    <TextView
        android:id="@+id/noQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/no_question"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
